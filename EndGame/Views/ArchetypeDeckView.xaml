<UserControl x:Class="HDT.Plugins.EndGame.Views.ArchetypeDeckView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:HDT.Plugins.EndGame.Views"
             xmlns:vm="clr-namespace:HDT.Plugins.EndGame.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel>
        <TextBlock Text="{Binding Deck.Name}" />
        <TextBlock Text="{Binding Deck.Klass}" />
        <TextBlock Text="{Binding Deck.Format}" />
        <TextBlock Text="{Binding Deck.Style}" />
        <ListView x:Name="ListViewCards" ItemsSource="{Binding Cards}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Rectangle Fill="{Binding Background}" Height="34" Width="217" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackPanel>
</UserControl>