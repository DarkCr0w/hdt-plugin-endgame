<mah:MetroWindow x:Class="HDT.Plugins.EndGame.Views.NoteView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:mah.convert="clr-namespace:MahApps.Metro.Converters"
        xmlns:vm="clr-namespace:HDT.Plugins.EndGame.ViewModels"
        mc:Ignorable="d"
        Width="600" Height="400"
        d:DesignWidth="600" d:DesignHeight="400"
        Topmost="True">
    <mah:MetroWindow.DataContext>
        <vm:NoteViewModel />
    </mah:MetroWindow.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <GroupBox Grid.Column="0" Grid.Row="1" Margin="10"
                  Header="Archetypes">
            <ListBox ItemsSource="{Binding Decks}" SelectedItem="{Binding SelectedDeck}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <DockPanel>
                            <TextBlock DockPanel.Dock="Right" Margin="4,0" HorizontalAlignment="Left" Text="{Binding Similarity}" />
                            <TextBlock Margin="2,0" Text="{Binding Deck.Name}" />
                        </DockPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </GroupBox>

        <TextBox x:Name="NoteTextBox" Grid.Column="0" Grid.Row="2" Margin="10"
                 TextWrapping="Wrap" Text="{Binding Note}">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TextChanged">
                    <i:InvokeCommandAction
                        Command="{Binding NoteTextChangeCommand}"
                        CommandParameter="{Binding ElementName=NoteTextBox, Path=Text}">
                    </i:InvokeCommandAction>
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </TextBox>

        <Border x:Name="DeckListContainer" Grid.Column="2" Grid.Row="1" Grid.RowSpan="2"
                BorderBrush="{DynamicResource AccentColorBrush}" BorderThickness="1" Margin="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <DockPanel Grid.Row="0" Background="{DynamicResource AccentColorBrush}">
                    <Button Width="68" Height="20" Margin="4"
                            DockPanel.Dock="Right"
                            Command="{Binding UpdateCommand}">
                        <TextBlock FontFamily="pack://application:,,,/EndGame;component/Resources/#icomoon-min"
                            Text="&#xea2e; REFRESH" FontSize="10" />
                    </Button>
                    <TextBlock Text="{Binding PlayerClass}"
                               Margin="4,0"
                               FontSize="14"
                               VerticalAlignment="Center"
                               Foreground="White" />
                </DockPanel>
                <ListView ItemsSource="{Binding Cards}" Grid.Row="1"
                          ScrollViewer.HorizontalScrollBarVisibility="Hidden">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Rectangle Fill="{Binding Image}" Height="34" Width="217" />
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Border>
    </Grid>
</mah:MetroWindow>