<mah:MetroWindow x:Class="HDT.Plugins.EndGame.Views.NoteView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:vm="clr-namespace:HDT.Plugins.EndGame.ViewModels"
        mc:Ignorable="d"
        Width="600" Height="400"
        d:DesignWidth="600" d:DesignHeight="400"
        Topmost="True">
    <mah:MetroWindow.DataContext>
        <vm:NoteViewModel />
    </mah:MetroWindow.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ListView Grid.Column="0" Grid.Row="1" Margin="10"
                  ItemsSource="{Binding Decks}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <TextBox x:Name="NoteTextBox" Grid.Column="0" Grid.Row="2" Margin="10"
                 TextWrapping="Wrap" Text="{Binding Note}">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TextChanged">
                    <i:InvokeCommandAction
                        Command="{Binding NoteTextChangeCommand}"
                        CommandParameter="{Binding ElementName=NoteTextBox, Path=Text}">
                    </i:InvokeCommandAction>
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </TextBox>

        <Border x:Name="DeckListContainer" Grid.Column="2" Grid.Row="1" Grid.RowSpan="2"
                BorderBrush="Black" BorderThickness="1" Margin="10">
            <ListView ItemsSource="{Binding Cards}"
                  Grid.Column="0" Grid.Row="1">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Rectangle Fill="{Binding Image}" Height="34" Width="217" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Border>

        <Button Grid.Column="0" Grid.Row="3" Content="Set" />
    </Grid>
</mah:MetroWindow>