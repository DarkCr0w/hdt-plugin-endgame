<mah:MetroWindow x:Class="HDT.Plugins.EndGame.Views.NoteView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:vm="clr-namespace:HDT.Plugins.EndGame.ViewModels"
        mc:Ignorable="d"
        Width="600" Height="400"
        MinWidth="600" MinHeight="400"
        d:DesignWidth="600" d:DesignHeight="400"
        Title="EndGame"
        Topmost="True"
        Loaded="Window_Loaded">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Closing">
            <i:InvokeCommandAction Command="{Binding WindowClosingCommand}">
            </i:InvokeCommandAction>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <mah:MetroWindow.Resources>
        <!-- checkbox-checked | http://icomoon.io | GPL / CC BY 4.0 -->
        <Canvas x:Key="CheckedIcon" Clip="M 72,72 L 136,72 136,136 72,136 72,72 Z">
            <Path Data="F 1 M 56,0 L 8,0 C 3.6,0 0,3.6 0,8 L 0,56 C 0,60.4 3.6,64 8,64 L 56,64 C 60.4,64 64,60.4 64,56 L 64,8 C 64,3.6 60.4,0 56,0 Z M 28,49.657 L 13.172,34.829 18.829,29.172 28,38.343 47.172,19.171 52.829,24.828 28.001,49.656 Z"
                      RenderTransform="1,0,0,1,72,72" Fill="White">
                <Path.Effect>
                    <DropShadowEffect Opacity="0.7" ShadowDepth="4" BlurRadius="10" />
                </Path.Effect>
            </Path>
        </Canvas>
        <BooleanToVisibilityConverter x:Key="VisibilityConverter" />
        <Style x:Key="NoBorder" TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
            <Setter Property="BorderThickness" Value="0" />
        </Style>
    </mah:MetroWindow.Resources>
    <mah:MetroWindow.DataContext>
        <vm:NoteViewModel />
    </mah:MetroWindow.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <GroupBox Grid.Column="0" Grid.Row="0" Margin="10"
                  Header="Archetypes">
            <ListBox x:Name="DeckList" ItemsSource="{Binding Decks}" SelectedItem="{Binding SelectedDeck}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <DockPanel>
                            <TextBlock DockPanel.Dock="Right" Margin="4,0" HorizontalAlignment="Left" Text="{Binding Similarity}" />
                            <TextBlock DockPanel.Dock="Right" Margin="4,0" HorizontalAlignment="Left" Text="{Binding SimilarityAlt}" />
                            <TextBlock Margin="2,0" Text="{Binding Deck.Name}" />
                        </DockPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </GroupBox>

        <GroupBox Grid.Column="0" Grid.Row="1" Margin="10,0,10,10"
                  Header="Game Notes">
            <TextBox x:Name="NoteTextBox"
                     TextWrapping="Wrap"
                     mah:TextBoxHelper.Watermark="Add note text here..."
                     PreviewKeyDown="TextBox_PreviewKeyDown"
                     Text="{Binding Note}" Style="{StaticResource NoBorder}">
            </TextBox>
        </GroupBox>

        <GroupBox Grid.Column="1" Grid.Row="0" Grid.RowSpan="2"
                  x:Name="CardList"
                  Width="254" Margin="0,10,10,10"
                  Header="{Binding PlayerClass}">
            <ScrollViewer HorizontalScrollBarVisibility="Disabled">
                <ItemsControl ItemsSource="{Binding Cards}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Rectangle Fill="{Binding Image}" Height="34" Width="217" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </GroupBox>

        <GroupBox Grid.Column="2" Grid.Row="0" Grid.RowSpan="2"
                  Margin="0,10,10,10"
                  x:Name="ScreenshotList"
                  Visibility="{Binding HasScreenshots, Converter={StaticResource VisibilityConverter}, FallbackValue=Collapsed}"
                  Header="Screenshots">
            <ListBox x:Name="ListBox_Images" SelectionMode="Single" ItemsSource="{Binding Screenshots}">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center" />
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemContainerStyle>
                    <Style TargetType="{x:Type ListBoxItem}">
                        <Setter Property="IsSelected" Value="{Binding IsSelected}" />
                        <Style.Resources>
                            <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="Transparent" />
                        </Style.Resources>
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Height="110" Width="140" Margin="3">
                            <Image Source="{Binding Thumbnail}" HorizontalAlignment="Center" VerticalAlignment="Center" Stretch="None" />
                            <Rectangle x:Name="CheckedOverlay" Width="32" Height="32" Canvas.Right="20" Canvas.Bottom="15" Visibility="Hidden">
                                <Rectangle.Fill>
                                    <VisualBrush Visual="{StaticResource CheckedIcon}" Stretch="Uniform" />
                                </Rectangle.Fill>
                            </Rectangle>
                            <TextBlock Text="{Binding Index}" FontSize="14" FontWeight="Bold"
                                       Foreground="White" Background="{DynamicResource AccentColorBrush}" Padding="5,0"
                                       Margin="4,5,6,6" HorizontalAlignment="Left" VerticalAlignment="Top" />
                        </Grid>
                        <DataTemplate.Triggers>
                            <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                <Setter TargetName="CheckedOverlay" Property="Visibility" Value="Visible" />
                            </DataTrigger>
                        </DataTemplate.Triggers>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </GroupBox>
    </Grid>
</mah:MetroWindow>